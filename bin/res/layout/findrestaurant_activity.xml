<?xml version="1.0" encoding="utf-8"?>
<!--   음식점 찾기 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.binplace.MainActivity" >

    <SearchView
        android1:id="@+id/searchView"
        android1:layout_width="282dp"
        android1:layout_height="wrap_content" 
         android1:layout_marginBottom="30dip">
    </SearchView>

    <ListView
        android1:id="@+id/restaurantListView"
        android1:layout_width="match_parent"
        android1:layout_height="250dp" 
        android1:layout_marginBottom="30dip"
        android:divider="#ffcc22"
 		android:dividerHeight="1.5dp"
 		android:choiceMode="singleChoice"
 		android:textColor="#ffcc22"
        >

    </ListView>

    <LinearLayout
       android1:layout_width="match_parent"
       android1:layout_height="wrap_content" 
       android1:orientation="horizontal"
       android1:gravity="center_horizontal">

       <Button
           android1:id="@+id/showRestaurant"
           android1:layout_width="wrap_content"
           android1:layout_height="wrap_content"
           android1:layout_marginRight="5dip"
           android1:text="레스토랑 보기"
           android1:textSize="6pt" 
           android:textColor="#ff6487"/>
   
       <Button
           android1:id="@+id/favorite"
           android1:layout_width="wrap_content"
           android1:layout_height="wrap_content"
           android1:text="즐겨찾기 추가" 
           android1:textSize="6pt"
           android1:layout_marginRight="5dip"
           android:textColor="#ff6487"
           />

       <Button
           android1:id="@+id/map"
           android1:layout_width="wrap_content"
           android1:layout_height="wrap_content"
           android1:text="지도 보기"
           android1:textSize="6pt"
           android:textColor="#ff6487" />
           
   </LinearLayout>
</LinearLayout>                  
