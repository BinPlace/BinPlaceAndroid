<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RestaurantDetailActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.binplace.MainActivity" >

        <TextView
            android:id="@+id/selectedRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:gravity="center_horizontal"
            android:text=""
            android:textSize="18pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/activity_tab1_numberOfTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dip"
                    android:textColor="#415581"
                    android:text="테이블 수 :"
                   
                    android:textSize="11pt" />

                <TextView
                    android:id="@+id/activity_tab1_numberOfEmptyTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빈자리 수 :"
                    android:textColor="#3cb371"
                    android:textSize="11pt" />
            </LinearLayout>

            <Button
                android:layout_width="90dip"
                android:layout_height="wrap_content"
                android:text="즐겨찾기추가"
                android:textSize="7pt" 
                android:id = "@+id/favoriteAddButton"
                android:background="@drawable/mapbuttonshape"
   				android:layout_marginLeft="10dip"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/activity_tab1_viewTable"
            android:layout_width="275dip"
            android:layout_height="275dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="60dip" >
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>