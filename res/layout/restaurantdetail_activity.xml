<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.binplace.MainActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:gravity="center_horizontal"
        android:text="빈자리 보기"
        android:textSize="18pt"
        android:textColor="#ff6487" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빨간색 : 자리 있음 "
                android:textSize="6pt"
                android:textColor="#c71585" />

            <TextView
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="파란색 : 자리 없음"
                android1:textSize="6pt" 
                android:textColor="#3cb371"/>
            
            <TextView
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text=""
                android1:id = "@+id/numberOfEmptyTable"
                android1:textSize="6pt" />

        </LinearLayout>

        <Button
            android1:id="@+id/menuShow"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_marginLeft="70dp"
            android1:textSize="6pt"
            android1:text="메뉴 보기" />
    </LinearLayout>

    <ImageView
        android1:id="@+id/imageView1"
        android1:layout_width="219dp"
        android1:layout_height="wrap_content"
        android1:layout_marginLeft="30dip"
        android1:layout_marginTop="20dip"
        android1:layout_weight="0.91"
        android1:src="@drawable/ic_launcher" />

    <LinearLayout
        android1:layout_width="290dp"
        android1:layout_height="wrap_content"
        android1:layout_marginTop="30dip"
        android1:layout_weight="0.28"
        android1:gravity="center"
        android1:orientation="horizontal" >

        <Button
            android1:id="@+id/reservation"
            android1:layout_width="wrap_content"
            android1:layout_height="64dp"
            android1:textSize="6pt"
            android1:text="예약하기"
             android:textColor="#ff6487" />

        <Button
            android1:id="@+id/takingWaitNumber"
            android1:layout_width="102dp"
            android1:layout_height="wrap_content"
            android1:textSize="6pt"
            android1:text="대기번호 받기"
             android:textColor="#ff6487" />

        <Button
            android1:id="@+id/showWaitingNumver"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:textSize="6pt"
            android1:text="대기표 보기" 
             android:textColor="#ff6487"/>
    </LinearLayout>

</LinearLayout>